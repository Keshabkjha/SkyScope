{
  "name": "skyscope-weather-intelligence",
  "private": true,
  "version": "1.0.0",
  "description": "A sophisticated weather intelligence platform powered by AI, providing real-time weather data, forecasts, and intelligent insights through an intuitive chat interface.",
  "type": "module",
  "keywords": [
    "weather",
    "ai",
    "chat",
    "forecast",
    "react",
    "typescript",
    "vite",
    "google-ai",
    "weather-intelligence"
  ],
  "author": {
    "name": "Keshab Kumar",
    "email": "keshabkumarjha876@gmail.com",
    "url": "https://github.com/Keshabkjha"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Keshabkjha/SkyScope.git"
  },
  "bugs": {
    "url": "https://github.com/Keshabkjha/SkyScope/issues"
  },
  "homepage": "https://github.com/Keshabkjha/SkyScope#readme",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage --passWithNoTests",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\" --ignore-path .gitignore",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\" --ignore-path .gitignore",
    "clean": "rimraf dist coverage",
    "pre-commit": "lint-staged",
    "prepare": "husky install",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "security:audit": "npm audit --audit-level=high",
    "security:fix": "npm audit fix",
    "deps:check": "npm outdated",
    "deps:update": "npm update",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "@google/genai": "^1.40.0",
    "recharts": "^3.7.0",
    "lucide-react": "^0.563.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "vitest": "^2.0.0",
    "@vitest/ui": "^2.0.0",
    "@vitest/coverage-v8": "^2.0.0",
    "eslint": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint-plugin-react": "^7.37.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.0",
    "prettier": "^3.3.0",
    "lint-staged": "^15.2.0",
    "husky": "^9.0.0",
    "rimraf": "^6.0.0",
    "@storybook/react": "^8.4.0",
    "@storybook/react-vite": "^8.4.0",
    "@storybook/addon-essentials": "^8.4.0",
    "storybook": "^8.4.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
